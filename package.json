{
  "name": "organism",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node -r dotenv/config kernel/heartbeat.ts",
    "webhook": "ts-node -r dotenv/config kernel/webhook.ts",
    "talk": "ts-node -r dotenv/config kernel/cli.ts",
    "mission-control": "cd mission-control && npm run dev",
    "infra:start": "docker compose up -d",
    "infra:stop": "docker compose down -v",
    "db:migrate": "ts-node -r dotenv/config scripts/migrate.ts",
    "db:migrate:dry": "ts-node -r dotenv/config scripts/migrate.ts --dry-run",
    "db:status": "ts-node -r dotenv/config scripts/migrate.ts --status",
    "db:reset": "docker exec -i organism-postgres psql -U organism -d organism -c 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;' && docker exec -i organism-postgres psql -U organism -d organism < state/schema.sql",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.18.0",
    "resend": "^6.9.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.3.0",
    "@types/pg": "^8.16.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}